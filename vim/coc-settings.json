{
  "diagnostic-languageserver.filetypes": {
    "eelixir": [
      "mix_credo",
      "mix_credo_compile"
    ],
    "elixir": [
      "mix_credo",
      "mix_credo_compile"
    ],
    "sh": "shellcheck",
    "markdown": [
      "write-good",
      "markdownlint"
    ],
    "slim": "slim-lint"
  },
  "diagnostic-languageserver.mergeConfig": true,
  "diagnostic-languageserver.linters": {
    "shellcheck": {
      "args": [
        "--format", "json1",
        "-"
      ]
    },
     "slim-lint": {
    "command": "bundle",
    "sourceName": "slim-lint",
    "debounce": 100,
    "args": [
      "exec",
      "slim-lint",
      "--reporter", "json",
      "--stdin-file-path", "%filepath"
    ],
    "parseJson": {
      "errorsRoot": "files[0].offenses",
      "line": "location.line",
      "message": "${message}",
      "security": "severity"
    },
    "securities": {
      "error": "error",
      "warning": "warning"
    }
  },
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": [
        "elm"
      ],
      "rootPatterns": [
        "elm.json"
      ],
      "initializationOptions": {
        "elmAnalyseTrigger": "change"
      }
    }
  },
  "tsserver.enable": false,
  "eslint.enable": false,

  "codeLens.enable": true,

  "solargraph.diagnostics": true,
  "solargraph.autoformat": true,
  "solargraph.formatting": true,
  "solargraph.hover": true,

  "diagnostic.errorSign": "üò±",
  "diagnostic.warningSign": "üòì",
  "diagnostic.infoSign": "üíÅ",
  "diagnostic.hintSign": "üìé",

  "coc.preferences.formatOnSaveFiletypes": [
    "elixir",
    "javascript",
    "json",
    "slim",
    "ruby"
  ]
}
